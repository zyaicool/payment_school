<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="alif">
        <createTable tableName="role_matrices">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="timestamptz"/>
            <column name="created_by" type="int8"/>
            <column name="updated_at" type="timestamptz"/>
            <column name="updated_by" type="int8"/>
            <column name="deleted_at" type="timestamptz"/>
            <column name="deleted_by" type="int8"/>
            <column name="role_id" type="int8"/>
            <column name="page_name" type="text"/>
            <column name="page_code" type="text"/>
            <column name="is_create" type="boolean"/>
            <column name="is_read" type="boolean"/>
            <column name="is_update" type="boolean"/>
            <column name="is_delete" type="boolean"/>
        </createTable>
    </changeSet>

</databaseChangeLog>